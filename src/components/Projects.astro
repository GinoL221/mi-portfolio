---
import NextJSIcon from "../icons/NextJS.astro";
import Astroicon from "../icons/Astro.astro";
import TailwindCSSIcon from "../icons/TailwindCSS.astro";
import JavaScriptIcon from "../icons/JavaScript.astro";
import JavaIcon from "../icons/Java.astro";
import Link from "../icons/Link.astro";
import GitHub from "../icons/GitHub.astro";
import SpringBootIcon from "../icons/SpringBoot.astro";
import MySQLIcon from "../icons/MySQL.astro";
import JWTIcon from "../icons/Jwt.astro";
import NodeJSIcon from "../icons/NodeJS.astro";
import CSSIcon from "../icons/CSS.astro";
import HTMLIcon from "../icons/HTML.astro";

import LinkButton from "./LinkButton.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJSIcon,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-black text-white",
    icon: Astroicon,
  },
  TAILWINDCSS: {
    name: "Tailwind CSS",
    class: "bg-blue-500 text-white",
    icon: TailwindCSSIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-500 text-black",
    icon: JavaScriptIcon,
  },
  JAVA: {
    name: "Java",
    class: "bg-blue-700 text-white",
    icon: JavaIcon,
  },
  SPRINGBOOT: {
    name: "Spring Boot",
    class: "bg-green-700 text-white",
    icon: SpringBootIcon,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-blue-600 text-white",
    icon: MySQLIcon,
  },
  JWT: {
    name: "JWT",
    class: "bg-purple-600 text-white",
    icon: JWTIcon,
  },
  NODEJS: {
    name: "Node.js",
    class: "bg-green-600 text-white",
    icon: NodeJSIcon,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-400 text-white",
    icon: CSSIcon,
  },
  HTML: {
    name: "HTML",
    class: "bg-orange-500 text-white",
    icon: HTMLIcon,
  },
};

const PROJECTS = [
  {
    title: "Clínica Dental MVC",
    description:
      "Sistema de gestión para una clínica dental. Arquitectura MVC, autenticación con JWT y documentación con SpringDoc.",
    link: "https://github.com/GinoL221/Clinica-Dental-MVC",
    github: "https://github.com/GinoL221/Clinica-Dental-MVC",
    image: "/img/clinica-dental.webp",
    tags: [TAGS.JAVA, TAGS.SPRINGBOOT, TAGS.MYSQL, TAGS.JWT],
  },
  {
    title: "Mundo 3D",
    description:
      "Sitio web de ecommerce básico enfocado en impresión 3D. Proyecto orientado al diseño responsivo y experiencia visual.",
    link: "https://github.com/GinoL221/Mundo-3D",
    github: "https://github.com/GinoL221/Mundo-3D",
    image: "/img/mundo3d.webp",
    tags: [TAGS.HTML, TAGS.CSS, TAGS.JAVASCRIPT, TAGS.NODEJS],
  },
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt={`Image preview of ${title}`}
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
