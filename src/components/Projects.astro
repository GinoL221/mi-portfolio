---
import NextJSIcon from "../icons/NextJS.astro";
import Astroicon from "../icons/Astro.astro";
import TailwindCSSIcon from "../icons/TailwindCSS.astro";
import JavaScriptIcon from "../icons/JavaScript.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJSIcon,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-black text-white",
    icon: Astroicon,
  },
  TAILWINDCSS: {
    name: "Tailwind CSS",
    class: "bg-blue-500 text-white",
    icon: TailwindCSSIcon,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-yellow-500 text-black",
    icon: JavaScriptIcon,
  },
};

const PROJECTS = [
  {
    title: "Portfolio - Gino Lencina",
    description: "Mi portafolio personal construido con Astro y Tailwind CSS.",
    link: "#",
    github: "#",
    image: "/img/svgl.webp",
    tags: [TAGS.ASTRO, TAGS.TAILWINDCSS, TAGS.JAVASCRIPT],
  },
];
---

{
  PROJECTS.map(({ image, title, description, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-1`}>
              <tag.icon class=" size-4 mr-2" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla de ${title}`}
      />
    </article>
  ))
}
